<resources>
    <!-- Base application theme. -->
    <style name="Theme.KeyNotes" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="elevationOverlayEnabled">false</item>
    </style>

    <style name="AppDatePicker" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">@color/dark_primary</item>
        <item name="colorAccent">@color/dark_primary</item>
        <item name="colorSurface">@color/dark_surface</item>
        <item name="android:textColorPrimary">@color/dark_content</item>
        <item name="android:textColorSecondary">@color/dark_content</item>
        <item name="android:textColorPrimaryInverse">@color/dark_primary_content</item>
        <item name="android:textColorSecondaryInverse">@color/dark_primary_content</item>
    </style>

    <style name="AppTimePicker" parent="ThemeOverlay.MaterialComponents.TimePicker">
        <item name="materialClockStyle">@style/AppTimePicker.Clock</item>
        <item name="colorPrimary">@color/dark_primary</item>
        <item name="colorAccent">@color/dark_primary</item>
    </style>
    <style name="AppTimePicker.Clock" parent="Widget.MaterialComponents.TimePicker.Clock">
        <item name="clockFaceBackgroundColor">@color/dark_surface</item>
    </style>

</resources>