<resources>
    <!-- Base application theme. -->
    <style name="Theme.App" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="elevationOverlayEnabled">false</item>
        <item name="materialCalendarTheme">@style/AppDatePicker</item>
        <item name="materialTimePickerTheme">@style/AppTimePicker</item>
    </style>

    <style name="AppDatePicker" parent="@style/ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">@color/dark_primary</item>
        <item name="colorOnPrimary">@color/dark_on_primary</item>
        <item name="colorSurface">@color/dark_surface</item>
        <item name="colorOnSurface">@color/dark_on_surface</item>
    </style>

    <style name="AppTimePicker" parent="@style/ThemeOverlay.MaterialComponents.TimePicker">
        <item name="colorPrimary">@color/dark_primary</item>
        <item name="colorOnPrimary">@color/dark_on_primary</item>
        <item name="colorSurface">@color/dark_surface</item>
        <item name="colorOnSurface">@color/dark_on_surface</item>
    </style>

</resources>